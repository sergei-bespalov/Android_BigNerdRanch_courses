<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bespalov.sergey.runtracker">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-feature android:required="true" android:name="android.hardware.location.gps"/>
    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@mipmap/ic_launcher"
                 android:theme="@style/AppTheme"
                 android:name=".MyApp"
        >
        <activity android:name=".RunListActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".RunActivity"
                  android:label="@string/app_name"/>

        <receiver android:name=".model.TrackingLocationReceiver"
                  android:exported="false">
            <intent-filter>
                <action android:name="com.bignerdranch.android.runtracker.ACTION_LOCATION"/>
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyB08-Q0Qs4eXcJOZdwikqhjn2WTg9JDH7Y"/>

    </application>

</manifest>
